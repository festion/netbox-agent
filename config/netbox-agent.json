{
  "netbox": {
    "url": "https://netbox.example.com",
    "token": "your-netbox-api-token",
    "verify_ssl": true
  },
  "sources": {
    "homeassistant": {
      "enabled": true,
      "url": "http://192.168.1.10:8123",
      "token_path": "/config/ha_token",
      "sync_interval": 3600
    },
    "network_scan": {
      "enabled": true,
      "networks": ["192.168.1.0/24", "10.0.0.0/24"],
      "scan_interval": 3600
    },
    "filesystem": {
      "enabled": true,
      "config_paths": ["/etc/network", "/opt/homelab/configs"],
      "watch_interval": 300
    },
    "proxmox": {
      "enabled": false,
      "url": "https://proxmox.example.com:8006",
      "username": "api@pve",
      "token": "your-proxmox-token"
    },
    "truenas": {
      "enabled": false,
      "url": "https://truenas.example.com",
      "api_key": "your-truenas-api-key"
    }
  },
  "logging": {
    "level": "INFO",
    "file": "/home/dev/workspace/netbox-agent/logs/netbox-agent.log",
    "max_size": "10MB",
    "backup_count": 5
  },
  "sync": {
    "dry_run": false,
    "full_sync_interval": 86400,
    "incremental_sync_interval": 3600
  }
}